<Window x:Class="Server.Views.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server.Views"
        mc:Ignorable="d"
        Title="Server" Height="486.4" Width="413.2" ResizeMode="CanMinimize" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="0,0,0.4,5.8">
        <Grid.RowDefinitions>
            <RowDefinition Height="375*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tb_status" Height="355" Margin="15,15,16,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True" TextChanged="tb_status_TextChanged" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btn_start" Content="Start" HorizontalAlignment="Left" Margin="70,0,0,4.4" Width="75" Click="btn_start_Click" Grid.Row="1" Height="35" VerticalAlignment="Bottom"/>
        <Button x:Name="btn_stop" Content="Stop" HorizontalAlignment="Left" Margin="250,4.6,0,4.2" Width="75" IsEnabled="False" Click="btn_stop_Click" Grid.Row="1"/>

    </Grid>
</Window>
